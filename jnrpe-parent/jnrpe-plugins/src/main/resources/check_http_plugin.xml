<plugin name="CHECK_HTTP" class="it.jnrpe.plugin.CheckHttp">
  <description>
<![CDATA[
    This plugin tests the HTTP service on the specified host. It can test
normal (http) and secure (https) servers, follow redirects, search for
strings and regular expressions, check connection times, and report on
certificate expiration times.
]]>
  </description>
  <command-line>
    <options>
      <option shortName="H" longName="hostname" description="Hostname or IP address"
        required="true" hasArgs="true" argName="hostname" optionalArgs="false" />        
        
      <option shortName="p" longName="port" description="Port number, default is 80."
        required="false" hasArgs="true" argName="port" optionalArgs="false" />

   	  <option shortName="u" longName="url" description="URL to get or post, default is '/'."
        required="false" hasArgs="true" argName="url" optionalArgs="false" />
        
   	  <option shortName="P" longName="post" description="URL encoded POST data."
        required="false" hasArgs="true" argName="post" optionalArgs="false" />        

      <option shortName="w" longName="warning" description="Response time to result in warning status (seconds)"
        required="false" hasArgs="true" argName="warning" optionalArgs="false" />
          
      <option shortName="c" longName="critical" description="Response time to result in critical status (seconds)"
        required="false" hasArgs="true" argName="critical" optionalArgs="false" />
          
      <option shortName="t" longName="timeout" description="Seconds before connection times out (default: 10)"
        required="false" hasArgs="true" argName="timeout" optionalArgs="false" />
        
      <option shortName="k" longName="header" description="Any other tags to be sent in http header. Use multiple times for additional headers"
        required="false" hasArgs="true" argName="header" optionalArgs="false" />
      
      <option shortName="A" longName="useragent" description="User agent http header value"
        required="false" hasArgs="true" argName="useragent" optionalArgs="false" />
        
      <option shortName="a" longName="authorization" description="Username:password on sites with basic authentication"
        required="false" hasArgs="true" argName="authorization" optionalArgs="false" />

      <option shortName="b" longName="proxy-authorization" description="Username:password on proxy-servers with basic authentication"
        required="false" hasArgs="true" argName="authorization" optionalArgs="false" />
  
      <option shortName="S" longName="ssl" description="Connect via SSL. Port defaults to 443."
        required="false" hasArgs="true" argName="ssl" optionalArgs="true" />
   
      <option shortName="j" longName="method" description="HTTP method (GET, POST, HEAD, etc)."
        required="false" hasArgs="true" argName="method" optionalArgs="false" />              
                       
      <option shortName="e" longName="expect" description="Comma-delimited list of strings, at least one of them is expected in the first (status) line of the server response (default: HTTP/1.)."
        required="false" hasArgs="true" argName="expected" optionalArgs="false" />              

      <option shortName="s" longName="string" description="String to expect in the content"
        required="false" hasArgs="true" argName="string" optionalArgs="false" />              
                       
      <option shortName="N" longName="no-body" description="Don't wait for document body: stop reading after headers."
        required="false" hasArgs="false" argName="no-body" optionalArgs="true" />              
                       
      <option shortName="T" longName="content-type" description="specify Content-Type header media type when POSTing"
        required="false" hasArgs="true" argName="content-type" optionalArgs="false" />              
                                                
      <option shortName="l" longName="linespan" description="Allow regex to span newlines (must precede -r or -R)"
        required="false" hasArgs="false" argName="linespan" optionalArgs="false" />              
                       
      <option shortName="r" longName="regex" description="Search page for regex string"
        required="false" hasArgs="true" argName="regex" optionalArgs="false" />              
                            
      <option shortName="R" longName="eregi" description="Search page for case-insensitive regex string"
        required="false" hasArgs="true" argName="eregi" optionalArgs="false" />              
                       
      <option shortName="I" longName="invert-regex" description="Return CRITICAL if regex found, OK if not."
        required="false" hasArgs="false" argName="invert-regex" optionalArgs="true" />              
                       
     <option shortName="f" longName="onredirect" description="How to handle redirected pages. Options: ok|warning|critical|"
        required="false" hasArgs="true" argName="onredirect" optionalArgs="false" />    
       
      <option shortName="C" longName="certificate" description="Minimum number of days a certificate has to be valid. Port defaults to 443 (when this option is used the URL is not checked.)"
        required="false" hasArgs="true" argName="onredirect" optionalArgs="false" />              
             
    </options>
  </command-line>
</plugin>